<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.coldani3.dangoniser.screens.home.HomeFragment"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upcoming_events" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scroll_margin"
            android:background="@drawable/component_border"
            android:padding="5dp"
            android:id="@+id/upcoming_events">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_event" />

        </ScrollView>

        <sun.bob.mcalendarview.MCalendarView
            android:id="@+id/home_calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.coldani3.dangoniser.MainActivity"
            android:layout_marginHorizontal="5dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scroll_margin"
            android:background="@drawable/component_border"
            android:padding="5dp"
            android:id="@+id/todoList">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample todo">

            </CheckBox>
        </ScrollView>

    </LinearLayout>
</layout>