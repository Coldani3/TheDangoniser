<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.coldani3.dangoniser.screens.eventlist.EventListFragment"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/scroll_margin">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/events_for_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/title_sizes"/>

        <com.coldani3.dangoniser.components.EventListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/events"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_do_list_for_this_day"/>
        <com.coldani3.dangoniser.components.TodoListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/todo_list"/>
    </LinearLayout>
</layout>